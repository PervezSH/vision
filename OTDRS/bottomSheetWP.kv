<BottomSheetWP>:
    MDCard:
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}
        elevation: 10
        MDIconButton:
            icon: "close"
            user_font_size: "25sp"
            pos_hint: { "center_x": .5}
            on_press: app.manager.pop()
        BoxLayout:
            orientation: "vertical"
            MDCard:
                elevation: 20
                pos_hint: { "center_x": .5}
                Image:
                    source: root.image_path
                    allow_stretch: True
        MDRaisedButton:
            text: "Save"
            pos_hint: {"center_x": .5, "center_y": .9}
            md_bg_color: app.theme_cls.primary_color